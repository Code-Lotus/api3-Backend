generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model usuario {
  usuario_id    Int      @id @default(autoincrement())
  usuario_nome  String?  @db.VarChar(50)
  usuario_cpf   String?  @db.VarChar(15)
  usuario_email String?  @db.VarChar(70)
  usuario_senha String?  @db.VarChar(35)
  administrador Boolean?
  vendas        vendas[]
}

model cliente {
  cliente_id       Int      @id @default(autoincrement())
  cliente_nome     String?  @db.VarChar(50)
  cliente_cpfcnpj  String?  @db.VarChar(15)
  cliente_segmento String?  @db.VarChar(25)
  vendas           vendas[]
}

model vendas {
  venda_id      Int       @id @default(autoincrement())
  venda_data    DateTime? @db.Date
  venda_produto String?   @db.VarChar(35)
  cliente_id    Int?
  venda_valor   Float?    @db.Float
  usuario_id    Int?
  cliente       cliente?  @relation(fields: [cliente_id], references: [cliente_id], onDelete: NoAction, onUpdate: NoAction, map: "vendas_ibfk_1")
  usuario       usuario?  @relation(fields: [usuario_id], references: [usuario_id], onDelete: NoAction, onUpdate: NoAction, map: "vendas_ibfk_2")

  @@index([cliente_id], map: "cliente_id")
  @@index([usuario_id], map: "usuario_id")
}
